{
  "workflowApiVersion": "1.1",
  "metaData": {
    "icon": "icon.jpg",
    "category": "message"
  },
  "type": "REST",
  "lang": {
    "en-US": {
      "name": "Send Time CustomActivity",
      "description": "Calculates the next available send time based on the user's time zone."
    }
  },
  "arguments": {
    "execute": {
      "inArguments": [
        {
          "timezoneOffset": "{{Event.userRecords.timezoneOffset}}"
        },
        {
          "start_window": "{{Event.userRecords.start_window}}"
        },
        {
          "end_window": "{{Event.userRecords.end_window}}"
        },
        {
          "daytype": "{{Event.userRecords.daytype}}"
        }
      ],
      "outArguments": [
        {
          "nextSendTime": "default",
          "nextSendTimeDateType": "default"
        }
      ],
      "url": "https://simple-email-optimization.onrender.com/execute",
      "verb": "POST",
      "body": "",
      "header": "",
      "format": "json",
      "useJwt": false,
      "timeout": 10000
    }
  },
  "schema": {
    "arguments": {
      "execute": {
        "inArguments": [
          {
            "timezoneOffset": {
              "dataType": "Text",
              "isRequired": true,
              "direction": "in"
            },
            "daytype": {
              "dataType": "Text",
              "isRequired": true,
              "direction": "in"
            },
            "start_window": {
              "dataType": "Text",
              "isRequired": true,
              "direction": "in"
            },
            "end_window": {
              "dataType": "Text",
              "isRequired": true,
              "direction": "in"
            }
          }
        ],
        "outArguments": []
      }
    }
  },
  "configurationArguments": {
    "applicationExtensionKey": "your-extension-key",
    "publish": {
      "url": "https://your-server-url/publish",
      "verb": "POST",
      "header": "Content-Type: application/json",
      "body": "{}",
      "useJwt": false
    },
    "validate": {
      "url": "https://your-server-url/validate",
      "verb": "POST",
      "header": "Content-Type: application/json",
      "body": "{}",
      "useJwt": false
    },
    "stop": {
      "url": "https://your-server-url/stop",
      "verb": "POST",
      "header": "Content-Type: application/json",
      "body": "{}",
      "useJwt": false
    }
  },
  "userInterfaces": {
    "configModal": {
      "height": 300,
      "width": 400,
      "url": "https://simple-email-optimization.onrender.com/index.html"
    }
  }
}
